{
  "mcpServers": {
    "aurora_kb": {
      "comment": "Recommended: Use uv --directory to ensure dependencies are found",
      "command": "uv",
      "args": ["--directory", "/absolute/path/to/AuroraKB", "run", "python", "-m", "aurora_mcp.server"],
      "env": {
        "DATABASE_URL": "postgresql+asyncpg://aurora_user:aurora_pass@localhost:5432/aurora_kb",
        "OPENAI_API_KEY": "sk-your-openai-api-key-here",
        "OPENAI_BASE_URL": "https://api.openai.com/v1",
        "EMBEDDING_MODEL": "text-embedding-3-small",
        "EMBEDDING_DIMENSION": "1536"
      }
    },
    "aurora_kb_direct_script": {
      "comment": "Alternative: Direct script execution (may fail if dependencies not found)",
      "command": "uv",
      "args": ["run", "/absolute/path/to/AuroraKB/aurora_mcp/server.py"],
      "env": {
        "DATABASE_URL": "postgresql+asyncpg://aurora_user:aurora_pass@localhost:5432/aurora_kb",
        "OPENAI_API_KEY": "sk-your-openai-api-key-here",
        "OPENAI_BASE_URL": "https://api.openai.com/v1",
        "EMBEDDING_MODEL": "text-embedding-3-small",
        "EMBEDDING_DIMENSION": "1536"
      }
    },
    "aurora_kb_with_optimization": {
      "comment": "Example with optional Query Expansion enabled (Reranking deprecated)",
      "command": "uv",
      "args": ["--directory", "/absolute/path/to/AuroraKB", "run", "python", "-m", "aurora_mcp.server"],
      "env": {
        "DATABASE_URL": "postgresql+asyncpg://aurora_user:aurora_pass@localhost:5432/aurora_kb",
        "OPENAI_API_KEY": "sk-your-openai-api-key-here",
        "OPENAI_BASE_URL": "https://api.openai.com/v1",
        "EMBEDDING_MODEL": "text-embedding-3-small",
        "EMBEDDING_DIMENSION": "1536",

        "_comment_query_expansion": "Optional: Query Expansion (Phase 2) - Auto-enabled if model configured",
        "QUERY_EXPANSION_MODEL": "gpt-3.5-turbo",
        "QUERY_EXPANSION_BASE_URL": "https://api.openai.com/v1",
        "QUERY_EXPANSION_API_KEY": "sk-your-openai-api-key-here"
      }
    }
  }
}
